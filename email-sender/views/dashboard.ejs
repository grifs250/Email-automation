<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
</head>
<body>
    <%- include('./partials/navbar.ejs') %>
    <div class="container">
        <main>
            <div class="content">
                <section class="intro text-center">
                    <h1>Dashboard - <%= record.subject %></h1>
                    <div class="card mt-20">
                        <p><strong>Total Emails:</strong> <%= record.totalEmails %></p>
                        <p><strong>Sent Emails:</strong> <%= record.sentEmails %></p>
                        <p><strong>Failed Emails:</strong> <%= record.failedEmails %></p>
                    </div>

                    <% if (record.failedEmailList && record.failedEmailList.length > 0) { %>
                        <div class="card mt-20">
                            <h2>Failed Emails:</h2>
                            <ul>
                                <% record.failedEmailList.forEach(function(email) { %>
                                    <li><%= email %></li>
                                <% }); %>
                            </ul>
                        </div>
                    <% } %>

                    <div class="card mt-20">
                        <h2>Email Statuses:</h2>
                        <ul>
                            <% emailStatuses.forEach(function(status) { %>
                                <li><%= status.email %> - <%= status.status %> 
                                    <% if (status.status === 'bounced') { %>
                                        (Bounced at <%= status.bouncedAt.toLocaleString() %>)
                                    <% } %>
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                </section>
            </div>
            <%- include('./partials/footer.ejs') %>
        </main>
    </div>
</body>
</html>
